<div class="mt-12">
            <h3 class="text-2xl font-bold mb-4">Comments (<%= comments.length %>)</h3>

            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="POST" class="mb-8">
                    <textarea name="content" placeholder="Leave a comment..." class="w-full p-3 rounded bg-gray-800 border border-gray-700 text-white focus:outline-none focus:border-blue-500" rows="3"></textarea>
                    <button type="submit" class="mt-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded text-sm font-bold">Add Comment</button>
                </form>
            <% } else { %>
                 <p class="text-gray-400 mb-6">Please <a href="/user/signin" class="text-blue-400">login</a> to comment.</p>
            <% } %>

            <div class="space-y-4">
                <% comments.forEach(comment => { %>
                    <div class="bg-gray-800 p-4 rounded-lg border border-gray-700 flex gap-4">
                        <img src="<%= comment.createdBy.profileImageURL %>" class="w-10 h-10 rounded-full">
                        <div>
                            <p class="text-sm text-gray-400 font-semibold"><%= comment.createdBy.fullName %></p>
                            <p class="text-gray-200 mt-1"><%= comment.content %></p>
                        </div>
                    </div>
                <% }) %>
            </div>
            
        </div>
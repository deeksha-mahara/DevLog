<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home | DevLog</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans">

    <nav class="bg-gray-800 p-4 shadow-lg flex justify-between items-center">
        <div class="text-xl font-bold text-blue-400">DevLog</div>
        
        <div class="space-x-4">
            <% if (locals.user) { %>
                <span class="text-gray-400 text-sm">Welcome, <%= user.fullName %></span>
                <a href="/user/logout" class="bg-red-500 hover:bg-red-600 px-3 py-1 rounded text-sm transition">Logout</a>
                <a href="/blog/add-new" class="bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded text-sm transition">Write New</a>
            <% } else { %>
                <a href="/user/signin" class="text-gray-300 hover:text-white transition">Sign In</a>
                <a href="/user/signup" class="bg-blue-600 hover:bg-blue-700 px-3 py-1 rounded text-sm transition">Create Account</a>
            <% } %>
        </div>
    </nav>

    <div class="container mx-auto mt-10 p-4">
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% blogs.forEach(blog => { %>
                <div class="bg-gray-800 rounded-lg overflow-hidden shadow-lg border border-gray-700">
                    
                    <% if (blog.coverImageURL) { %>
                        <img src="<%= blog.coverImageURL %>" 
                             class="w-full h-64 object-cover" 
                             alt="Blog Cover">
                    <% } %>

                    <div class="p-4">
                        <h2 class="text-xl font-bold text-white mb-2"><%= blog.title %></h2>
                        <p class="text-gray-400 text-sm mb-4 line-clamp-3">
                            <%= blog.body %>
                        </p>
                        
                        <a href="/blog/<%= blog._id %>" class="text-blue-400 hover:text-blue-300 text-sm font-semibold">
                            Read More â†’
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>

    </div>

</body>
</html>